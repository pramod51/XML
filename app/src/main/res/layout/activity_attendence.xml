<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Attendence">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/maskgroup32"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/chevronleftblack"
                android:layout_margin="10dp"/>

            <TextView
                android:id="@+id/edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/roboto"
                android:text="Feburary 2021"
                android:textColor="#000000"
                android:textSize="18sp" />

        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:background="@drawable/rectangle1766"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/capture"
                        android:layout_centerInParent="true"/>
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="20dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/group17097"
                                android:layout_centerInParent="true"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="25"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="60dp"
                                android:textColor="@color/black"
                                android:textSize="16sp"
                                android:fontFamily="@font/lato"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="3"
                                android:textColor="@color/black"
                                android:layout_alignParentEnd="true"
                                android:layout_marginTop="40dp"
                                android:layout_marginEnd="60dp"
                                android:textSize="16sp"
                                android:fontFamily="@font/lato"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1"
                                android:textSize="16sp"
                                android:layout_alignParentEnd="true"
                                android:layout_marginTop="90dp"
                                android:layout_marginEnd="75dp"
                                android:textColor="@color/black"
                                android:fontFamily="@font/lato"/>
                        </RelativeLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/ellipse169"
                            android:gravity="center_vertical"
                            android:text="Present"
                            android:layout_marginTop="20dp"
                            android:textSize="16sp"
                            android:fontFamily="@font/lato"
                            android:drawablePadding="20dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/ellipse168"
                            android:gravity="center_vertical"
                            android:text="Leave"
                            android:textSize="16sp"
                            android:layout_marginTop="20dp"
                            android:fontFamily="@font/lato"
                            android:drawablePadding="20dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/ellipse170"
                            android:gravity="center_vertical"
                            android:text="Absent"
                            android:textSize="16sp"
                            android:layout_marginTop="20dp"
                            android:fontFamily="@font/lato"
                            android:drawablePadding="20dp"/>
                    </LinearLayout>
                </LinearLayout>
                <com.google.android.material.button.MaterialButton
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    app:cornerRadius="10dp"
                    android:text="Leave Request"
                    android:gravity="center"
                    android:textAllCaps="false"
                    android:background="@drawable/rectangle1992"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/lato"
                    app:backgroundTint="#470B63"/>
            </LinearLayout>

        </ScrollView>

    </LinearLayout>
</RelativeLayout>