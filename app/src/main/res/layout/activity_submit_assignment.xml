<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SubmitAssignment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/maskgroup32"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="60dp"
            android:src="@drawable/leftback"/>
        <TextView
            android:id="@+id/edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hi Sukhpal"
            android:textSize="22sp"
            android:layout_marginTop="30dp"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/lato"
            android:textColor="#342525"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit Your Assignment"
            android:textSize="17sp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/lato"
            android:textColor="#342525" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle1745"
            android:hint="Assignment Title"
            android:gravity="center_vertical"
            android:paddingStart="20dp"
            android:textColorHint="#2A2B2F"
            android:textColor="#2A2B2F"
            android:textSize="18sp"

            android:fontFamily="@font/lato"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="60dp"
            android:layout_marginStart="20dp"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="160dp">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle1745"
                android:hint="ut perspiciatis unde omnis iste natus error sit\n voluptatem"
                android:gravity="start"
                android:padding="20dp"
                android:textColorHint="#96999D"
                android:textSize="12sp"
                android:textColor="#96999D"
                android:minHeight="150dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/lato"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:src="@drawable/group17078"
                android:layout_marginEnd="30dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>


        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            app:cornerRadius="8dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:fontFamily="@font/lato"
            android:text="Submit Now"
            android:textAllCaps="false"
            android:textSize="22sp"
            app:backgroundTint="#470B63"
            android:background="@drawable/rectangle1979"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:weightSum="4"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_margin="10dp"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_margin="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_margin="2dp"
                        android:scaleType="fitXY"
                        android:layout_height="75dp"
                        android:src="@drawable/s4457"/>
                </RelativeLayout>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/grou17099"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_margin="10dp"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_centerInParent="true"
                    android:layout_margin="2dp"
                    android:background="@drawable/rectangle1998"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_margin="2dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/pdficon"/>
                </RelativeLayout>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/grou17099"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_margin="10dp"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_centerInParent="true"
                    android:layout_margin="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_margin="2dp"
                        android:layout_height="75dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/business"/>
                </RelativeLayout>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/grou17099"/>
            </RelativeLayout>


        </LinearLayout>


    </LinearLayout>

</RelativeLayout>